@model RedBadgeProject.Models.RentalAndDetailsViewModel
@using ScienceAndCiao.Models.User
@{
    ViewBag.Title = "Return";
}

<h2>Return</h2>

@using (Html.BeginForm(Model.actionName, "Rental"))
{
    @Html.AntiForgeryToken();


    <h2>@Model.actionName</h2>
    <div class="row" style="border:1px solid #bbb9b9; border-radius:5px;">
        <div class="col-sm-10">
            <fieldset disabled>
                <div class="row" style="padding-bottom:5px;padding-top:25px;">
                    <div class="col-sm-3">
                        @Html.LabelFor(m => m.Title, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(m => m.Title, new { @class = "form-control", enabled = "false" })
                    </div>
                </div>

                <div class="row" style="padding-bottom:5px;padding-top:25px;">
                    <div class="col-sm-3">
                        @Html.LabelFor(m => m.RentalPrice, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(m => m.RentalPrice, new { @class = "form-control", enabled = "false" })
                    </div>
                </div>

                <div class="row" style="padding-bottom:5px;padding-top:25px;">
                    <div class="col-sm-3">
                        @Html.LabelFor(m => m.StartDate, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(m => m.StartDate, "{0:MM/dd/yyyy}", new { @class = "form-control", enabled = "false" })
                    </div>
                </div>
 
            </fieldset>
            @if (Model.actionName.ToLower().Equals("Return"))
            { }
            <fieldset disabled>
                <div class="row" style="padding-bottom:5px;padding-top:25px;">
                    <div class="col-sm-3">
                        @Html.LabelFor(m => m.Duration, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(m => m.Duration, new { @class = "form-control", enabled = "false" })
                    </div>
                </div>
                <div class="row" style="padding-bottom:5px;padding-top:25px;">
                    <div class="col-sm-3">
                        @Html.LabelFor(m => m.Name, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", enabled = "false" })
                    </div>
                </div>
                <div class="row" style="padding-bottom:5px;padding-top:25px;">
                    <div class="col-sm-3">
                        @Html.LabelFor(m => m.BirthDate, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(m => m.BirthDate, "{0:MM/dd/yyyy}", new { @class = "form-control", enabled = "false" })
                    </div>
                </div>
                <div class="row" style="padding-bottom:5px;padding-top:25px;">
                    <div class="col-sm-3">
                        @Html.LabelFor(m => m.Email, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", enabled = "false" })
                    </div>
                </div>
            </fieldset>

        </div>
        <div class="col-sm-2">
            <div class="image-book">
                <img class="thumbnail-img" src="@Model.ImageUrl" alt="" style="width:100%;height:auto;" />
            </div>
        </div>
    </div>
    <br />
    <p>
        @Html.Partial("_BackToListButtonPartial")
        <input type="submit" value="@Model.actionName" id="btnSubmit" class="btn btn-sm btn-success" />
    </p>
    <br />
}


