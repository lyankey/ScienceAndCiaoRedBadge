@model ScienceAndCiao.Data.Branch
@{
    ViewBag.Title = "Delete";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div>
        <h3>Delete this Branch?</h3>
        <hr />
        <div class="form-border">
            <fieldset disabled>
                <div class="row" style="padding-bottom:5px; padding-top:5px;">
                    <div class="col-md-2">
                        @Html.LabelFor(m => m.BranchName, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.BranchName, new { @class = "form-control" })
                    </div>
                </div>
            </fieldset>
        </div>
    </div>
    <br />
    <p>
        @Html.Partial("_BackToListButtonPartial")
        <input type="submit" value="Delete" class="btn btn-sm btn-danger" />
    </p>
}

