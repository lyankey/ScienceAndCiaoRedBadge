@model IEnumerable<RedBadgeProject.Models.KitThumbnailViewModel>
@* want to return an object of thumbnailview enumerable list, see the home controller *@
@{
    ViewBag.Title = "Home Page";
}


<br />
<div class="row">
    <div class="pull-right" style="padding-right:15px;">
        <button type="submit" value="Search" class="btn btn-sm btn-primary">
            <span class="glyphicon glyphicon-search"></span> &nbsp; Search
        </button>
    </div>
    @*making form input buttom sm the same size as the above button*@
    <div class="pull-right">
        @Html.Editor("search", new { htmlAttributes = new { @class = "form-control input-sm" } })
    </div>

</div>

<br />

<div class="row">
    @foreach (var area in Model)
    {
@Html.Partial("_ThumbnailAreaPartial", area);}
</div>